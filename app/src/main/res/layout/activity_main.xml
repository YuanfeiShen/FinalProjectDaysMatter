<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please enter the starting/memorial date: \n(YYYY/MM/DD)"
            android:textSize="18sp"
            app:fontFamily="casual" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spin1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:entries="@array/years"
                app:fontFamily="casual">
            </Spinner>

            <Spinner
                android:id="@+id/spin2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:entries="@array/months"
                app:fontFamily="casual">

            </Spinner>

            <Spinner
                android:id="@+id/spin3"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:entries="@array/dates"
                app:fontFamily="casual">

            </Spinner>


        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Please enter the ending date: \n(YYYY/MM/DD)"
            android:textSize="18sp"
            android:visibility="visible"
            app:fontFamily="casual" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spin4"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:entries="@array/years"
                app:fontFamily="casual"></Spinner>

            <Spinner
                android:id="@+id/spin5"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:entries="@array/months"
                app:fontFamily="casual"></Spinner>

            <Spinner
                android:id="@+id/spin6"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:entries="@array/dates"
                app:fontFamily="casual"></Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="confirm"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  " />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Clear" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Set Memorial" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="\nDays in between:"
            android:textSize="24sp"
            app:fontFamily="casual" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="50sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:textSize="18sp"
                app:fontFamily="casual" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Memorial Day:\n"
            android:textSize="24sp"
            app:fontFamily="casual" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:backgroundTint="#ffffff"
                android:cursorVisible="true"
                android:ems="10"
                android:gravity="center"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textCursorDrawable="@null"
                app:fontFamily="casual" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:fontFamily="casual"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>